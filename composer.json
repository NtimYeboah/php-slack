{
    "name": "ntimyeboah/php-slack",
    "description": "A package to integrate Slack in your PHP applications",
    "keywords": [
        "php",
        "slack",
        "integration"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ntim Yeboah",
            "email": "ntimobedyeboah@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "NtimYeboah\\PhpSlack\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NtimYeboah\\PhpSlack\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
